---
import BaseLayout from '../layouts/BaseLayout.astro'
import Container from '../components/layout/Container.astro'
import ProjectDetailCard from '../components/project/ProjectDetailCard.astro'
import { Button } from '../components/ui/button'
import { ArrowLeft } from 'lucide-react'
import { getLangFromUrl, useTranslations, useTranslatedPath, useTranslatedProjects } from '../i18n/utils'
import { PROJECTS_DATA } from '../lib/constants'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)
const getProject = useTranslatedProjects(lang)
---

<BaseLayout
  title={t('portfolio.title')}
  description={t('portfolio.description')}
>
  <main class="flex min-h-[80vh] flex-auto flex-col py-12" transition:animate="slide">
    <Container size="md">
      <div class="mb-8">
        <a href={translatePath('/')}>
          <Button variant="ghost" size="sm" className="mb-4">
            <ArrowLeft className="mr-2 h-4 w-4" />
            {t('nav.home')}
          </Button>
        </a>
        <h2
          class="scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0"
        >
          {t('portfolio.heading')}
        </h2>
        <p class="mt-4 text-muted-foreground">
          {t('portfolio.description')}
        </p>
      </div>
    </Container>
    <div class="py-8">
      <Container size="md">
        <div class="space-y-8">
          {PROJECTS_DATA.map((project) => {
            const translatedProject = getProject(project.id)
            return (
              <ProjectDetailCard
                name={translatedProject.name}
                description={translatedProject.description}
                technologies={project.technologies}
                githubUrl={project.githubUrl}
                liveUrl={project.liveUrl}
                images={project.images}
                startDate={project.startDate}
                endDate={project.endDate}
              />
            )
          })}
        </div>
      </Container>
    </div>
  </main>
</BaseLayout>
