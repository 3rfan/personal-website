---
import Card from '../Card.astro'
import { Button } from '../ui/button'
import { LINKS } from '../../lib/constants'
import { Linkedin, Github, Mail, File } from 'lucide-react'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const PDF = '/CV-English.pdf'
---

<Card colSpan="md:col-span-3 lg:col-span-4" rowSpan="lg:row-span-1">
  <div class="relative flex h-full w-full gap-6">
    <!-- Content wrapper with z-index to stay above mobile background image -->
    <div class="relative z-10 flex flex-1 flex-col justify-between gap-4">
      <div class="flex flex-col gap-2">
        <h6 class="m-0 text-sm font-normal text-gray-500 md:text-base md:font-light">
          {t('intro.welcome')}
        </h6>
        <p class="m-0 text-base font-normal md:text-lg md:font-light" set:html={t('intro.title')} />
      </div>
      <!-- mt-auto pushes buttons to bottom -->
      <div class="mt-auto flex flex-wrap gap-3">
        <a href={LINKS.linkedin} aria-label="linkeding profile" target="_blank">
          <Button aria-label="linkedin profile" size="sm">
            <Linkedin size={18} />
            <span class="sr-only">{t('intro.sr.linkedin')}</span>
          </Button>
        </a>
        <a href={LINKS.mail} aria-label="mail profile" target="_blank">
          <Button size="sm">
            <Mail size={18} />
            <span class="sr-only">{t('intro.sr.email')}</span>
          </Button>
        </a>
        <a href={LINKS.github} aria-label="github profile" target="_blank">
          <Button aria-label="github profile" size="sm">
            <Github size={18} />
            <span class="sr-only">{t('intro.sr.github')}</span>
          </Button>
        </a>
        <a href={PDF} aria-label="download CV" target="_blank">
          <Button size="sm">
            <File size={18} />
            <span class="ml-2">Download CV</span>
          </Button>
        </a>
      </div>
    </div>
    
    <!-- Mobile: absolute positioned background image (half visible overlay) -->
    <img
      width="180"
      height="180"
      src="/me-light.png"
      class="pointer-events-none absolute right-0 top-1/2 z-0 max-h-[180px] w-auto -translate-y-1/2 select-none rounded-2xl opacity-25 md:hidden dark:hidden"
      alt="Portrait of Erfan Hosseini (Light Mode)"
    />
    <img
      width="200"
      height="200"
      src="/me-dark.png"
      class="pointer-events-none absolute right-0 top-1/2 z-0 hidden max-h-[180px] w-auto -translate-y-1/2 select-none rounded-2xl opacity-25 md:hidden dark:block dark:md:hidden"
      alt="Portrait of Erfan Hosseini (Dark Mode)"
    />
    
    <!-- Tablet+: normal flex layout image -->
    <img
      width="270"
      height="270"
      src="/me-light.png"
      class="pointer-events-none hidden select-none md:block md:max-h-[270px] md:w-auto md:rounded-2xl lg:max-h-[310px] lg:rounded-3xl dark:hidden"
      alt="Portrait of Erfan Hosseini (Light Mode)"
    />
    <img
      width="270"
      height="270"
      src="/me-dark.png"
      class="pointer-events-none hidden select-none md:max-h-[270px] md:w-auto md:rounded-2xl lg:max-h-[310px] lg:rounded-3xl dark:md:block"
      alt="Portrait of Erfan Hosseini (Dark Mode)"
    />
  </div>
</Card>
