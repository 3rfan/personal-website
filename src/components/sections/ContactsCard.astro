---
import Card from '../Card.astro'
import { LINKS } from '../../lib/constants'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Card colSpan="md:col-span-2" rowSpan="lg:row-span-1">
  <div class="h-full">
    <header class="flex items-center">
      <h1 class="text-lg font-bold text-foreground">
        {t('contacts.title')}
      </h1>
    </header>
    <address class="mt-4 flex flex-col">
      <h2 class="text-sm text-gray-500">{t('contacts.details')}</h2>
      <p class="text-sm">erfan_hosseini1@hotmail.com</p>
      <p class="text-sm">Delft, The Netherlands</p>
    </address>
    <div class="mt-4 flex w-fit flex-col">
      <h2 class="text-sm text-gray-500">{t('contacts.socials')}</h2>
      <ul>
        <li>
          <a href={LINKS.linkedin} target="_blank">Linkedin</a>
        </li>
        <li>
          <a href={LINKS.github} target="_blank">Github</a>
        </li>
      </ul>
    </div>
  </div>
</Card>
