---
import Card from '../common/Card.astro'
import { Button } from '../ui/button'
import { SquareArrowOutUpRight } from 'lucide-react'
import { EXPERIENCE } from '../../lib/constants'
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
  useTranslatedExperience,
} from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
const translatePath = useTranslatedPath(lang)
const getExperience = useTranslatedExperience(lang)
---

<Card
  colSpan="md:col-span-2 lg:col-span-2"
  rowSpan="md:row-span-1 lg:row-span-2"
  title={t('experience.title')}
>
  <a href={translatePath('/work')} class="absolute right-4 top-4 z-10">
    <SquareArrowOutUpRight
      className="transition-colors hover:text-primary"
      size={16}
    />
  </a>
  <div class="mt-2 space-y-4">
    {
      EXPERIENCE.slice(0, 1).map((exp) => {
        const translatedExp = getExperience(exp.id)
        if (!translatedExp) return null
        return (
          <div class="space-y-3">
            <div>
              <h3 class="text-base font-semibold">{translatedExp.position}</h3>
              <div class="flex items-center justify-between gap-4">
                <a class="text-sm text-primary hover:underline" href={exp?.link ?? ''} target="_blank">
                  {translatedExp.company}
                </a>
                <p class="text-xs text-muted-foreground whitespace-nowrap">
                  {exp.start} - {exp.end === 'Current' ? translatedExp.current : exp.end}
                </p>
              </div>
              <p class="text-xs text-muted-foreground mt-1">
                {translatedExp.location}
              </p>
            </div>
            {translatedExp.tasks.length > 0 && (
              <div class="flex gap-2 text-sm text-muted-foreground">
                <span class="text-primary mt-0.5">â€¢</span>
                <p class="leading-relaxed">{translatedExp.tasks[0]}</p>
              </div>
            )}
          </div>
        )
      })
    }
    <a href={translatePath('/work')}>
      <Button variant="link" className="pl-0">{t('experience.viewMore')}</Button>
    </a>
  </div>
</Card>
