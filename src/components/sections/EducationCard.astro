---
import Card from '../common/Card.astro'
import { EDUCATION } from '../../lib/constants'
import { getLangFromUrl, useTranslations } from '../../i18n/utils'

const lang = getLangFromUrl(Astro.url)
const t = useTranslations(lang)
---

<Card colSpan="md:col-span-2 lg:col-span-2" rowSpan="md:row-span-1 lg:row-span-2" title={t('education.title')}>
  <div class="mt-4 space-y-6">
    {
      EDUCATION.map((education) => (
        <div class="space-y-1">
          <h4 class="text-base font-semibold">{education.degree}</h4>
          <div class="flex items-center justify-between gap-4">
            <a
              href={education.link}
              target="_blank"
              rel="noopener noreferrer"
              class="text-sm text-primary hover:underline"
            >
              {education.institution}
            </a>
            <p class="text-xs text-muted-foreground whitespace-nowrap">
              {education.start} - {education.end}
            </p>
          </div>
          <div class="flex gap-2 text-sm text-muted-foreground">
            <span class="text-primary mt-0.5">â€¢</span>
            <p>{education.specialization}</p>
          </div>
        </div>
      ))
    }
  </div>
</Card>
